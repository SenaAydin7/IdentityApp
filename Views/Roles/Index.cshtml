@model IEnumerable<AppRole>

    <a class="btn btn-primary" asp-action="Create">Create Role</a>
    <hr>
    
    <table class="table table-sm table-bordered">
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>User Name</th>
            <th style="width: 130px;"></th>
        </tr>
    
        @if(Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">Doesn't Have a role.</td></tr>
        }
    
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id">User List</td>
                <td class="roleButton">
                    <form method="post">
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    
    </table>